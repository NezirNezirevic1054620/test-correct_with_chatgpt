{% extends "index.html.j2" %}
{% block content %}
<form action="{{ url_for('teachers.create_teacher') }}" method="POST">
    {{ form.hidden_tag() }}
    <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
        <div class="border-b border-gray-900/10 pb-12">
            <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                <div class="sm:col-span-3">
                    <label for="display_name" class="block font-medium leading-6 text-gray-900">Display Name</label>
                    <div class="mt-2">
                        <label>
                        <input type="text" id="display_name" name="display_name" placeholder="Diederik de Vries" class="block w-full pl-2 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </label>
                    </div>
                    {% if form.display_name.errors %}
                    {% for error in form.display_name.errors %}
                    <p class="text-red-500 mt-1">{{ error }}</p>
                    {% endfor %}
                    {% endif %}
                </div>
                <div class="sm:col-span-3">
                    <label for="username" class="block text-sm font-medium leading-6 text-gray-900">Username</label>
                    <div class="mt-2">
                        <label>
                        <input type="text" name="username" placeholder="diederiknl" class="block w-full pl-2 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </label>
                    </div>
                    {% if form.username.errors %}
                    {% for error in form.username.errors %}
                    <p class="text-red-500 mt-1">{{ error }}</p>
                    {% endfor %}
                    {% endif %}
                </div>
                <div class="sm:col-span-3">
                    <label for="teacher_password" class="block text-sm font-medium leading-6 text-gray-900">Password</label>
                    <div class="mt-2">
                        <label>
                        <input name="teacher_password" type="text" class="block w-full pl-2 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </label>
                    </div>
                    {% if form.teacher_password.errors %}
                    {% for error in form.teacher_password.errors %}
                    <p class="text-red-500 mt-1">{{ error }}</p>
                    {% endfor %}
                    {% endif %}
                </div>
                <div class="sm:col-span-3">
                    <label for="is_admin" class="block text-sm font-medium leading-6 text-gray-900">Admin</label>
                    <div class="mt-2">
                        <label>
                            <select name="is_admin"  class="block w-full pl-2 rounded-md border-0 py-2.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                <option value="1">Yes</option>
                                <option value="0">No</option>
                            </select>
                        </label>
                    </div>
                    {% if form.is_admin.errors %}
                    {% for error in form.is_admin.errors %}
                    <p class="text-red-500 mt-1">{{ error }}</p>
                    {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="mt-6 flex items-center justify-end gap-x-6">
            <button type="submit" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Save</button>
        </div>
    </div>
</form>
{% endblock %}
