{% extends "index.html.j2" %}
{% block content %}
{% for note in note %}
<form action="{{ url_for('notes.edit_note') }}"  method="POST">
    <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
        <div class="border-b border-gray-900/10 pb-12">
            <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                <div class="sm:col-span-3">
                    <label for="title" class="block font-medium leading-6 text-gray-900">Title</label>
                    <div class="mt-2">
                        <label>
                        <input type="text" name="title" value="{{ note[1] }}"  class="block w-full pl-2 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </label>
                    </div>
                </div>
                <div class="sm:col-span-3">
                    <label for="note_source" class="block text-sm font-medium leading-6 text-gray-900">Note Source</label>
                    <div class="mt-2">
                        <label>
                        <input type="text" name="note_source" value="{{ note[2] }}" class="block w-full pl-2 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </label>
                    </div>
                </div>
                <div class="sm:col-span-3">
                    <label for="is_public" class="block text-sm font-medium leading-6 text-gray-900">Is Public</label>
                    <div class="mt-2">
                        <label>
                        <input name="is_public" value="{{ note[3] }}" type="number" class="block w-full pl-2 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </label>
                    </div>
                </div>
                <div class="sm:col-span-3">
                    <label for="teacher_id" class="block text-sm font-medium leading-6 text-gray-900">Teacher</label>
                    <div class="mt-2">
                        <label>
                            <select name="teacher_id"  class="block w-full pl-2 rounded-md border-0 py-2.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                <option value="{{ note[4] }}">{{ note[12] }}</option>
                                {% for teacher in teachers %}
                                <option name="teacher_id" value="{{ teacher[0] }}">{{ teacher[1] }}</option>
                                {% endfor %}
                            </select>
                        </label>
                    </div>
                </div>
                <div class="sm:col-span-3">
                    <label for="category_id" class="block text-sm font-medium leading-6 text-gray-900">Category</label>
                    <div class="mt-2">
                        <label>
                            <select name="category_id" class="block w-full pl-2 rounded-md border-0 py-2.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                <option value="{{ note[5] }}">{{ note[9] }}</option>
                                {% for category in categories %}
                                <option value="{{ category[0] }}">{{ category[1] }}</option>
                                {% endfor %}
                            </select>
                        </label>
                    </div>
                </div>
                <div class="sm:col-span-3">
                    <label for="note" class="block text-sm font-medium leading-6 text-gray-900">Note</label>
                    <div class="mt-2">
                        <label>
                        <input name="note" value="{{ note[6] }}"class="block w-full pl-2 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"></input>
                        </label>
                    </div>
                </div>
                <div class="mt-6 flex items-center justify-between">
                    <button type="button" id="generateQuestionBtn" onclick="generateQuestion({{ note_id }})" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Generate open question</button>
                    <div class="ml-4">
                        <input type="text" id="questionText" style="width: 600px; height: 50px; white-space: pre-wrap;" class="block w-full pl-2 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6" placeholder="Generated Question">
                    </div>
                </div>
                <script>
                    function generateQuestion(noteId) {
                        fetch('/notes/generate_question', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/x-www-form-urlencoded',
                            },
                            body: `note_id=${noteId}`,
                        })
                        .then(response => {
                            if (!response.ok) {
                                throw new Error('Network response was not ok');
                            }
                            return response.text();
                        })
                        .then(data => {
                            var questionText = document.getElementById('questionText');
                            questionText.value = data;
                            questionText.style.height = questionText.scrollHeight + 'px';
                            const maxLength = 40; // Adjust this value as needed
                            let question = data;
                            if (question.length > maxLength) {                                const chunkSize = 20; // Adjust this value as needed
                                const chunks = [];
                                for (let i = 0; i < question.length; i += chunkSize) {
                                    chunks.push(question.substring(i, i + chunkSize));
                                }
                                question = chunks.join('\n');
                            }
                            document.getElementById('questionText').value = question;
                        })
                        .catch(error => {
                            console.error('Error:', error);                        });
                    }
                </script>
                <label>
                <input type="hidden" name="note_id" value="{{ note[0] }}" >
                </label>
            </div>
        </div>
        <div class="mt-6 flex items-center justify-end gap-x-6">
            <button type="submit" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Save</button>
        </div>
    </div>
</form>
{% endfor %}
{% endblock %}