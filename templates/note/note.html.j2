{% extends "index.html.j2" %}
{% block content %}
{% for note in note %}
<form action="{{ url_for('notes.edit_note') }}"  method="POST">
    <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
        <div class="border-b border-gray-900/10 pb-12">
            <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                <div class="sm:col-span-3">
                    <label for="title" class="block font-medium leading-6 text-gray-900">Title</label>
                    <div class="mt-2">
                        <label>
                        <input type="text" name="title" value="{{ note.title }}"  class="block w-full pl-2 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </label>
                    </div>
                </div>
                <div class="sm:col-span-3">
                    <label for="note_source" class="block text-sm font-medium leading-6 text-gray-900">Note Source</label>
                    <div class="mt-2">
                        <label>
                        <input type="text" name="note_source" value="{{ note.note_source }}" class="block w-full pl-2 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </label>
                    </div>
                </div>
                <div class="sm:col-span-3">
                    <label for="is_public" class="block text-sm font-medium leading-6 text-gray-900">Is Public</label>
                    <div class="mt-2">
                        <label>
                            <select name="is_public"  class="block w-full pl-2 rounded-md border-0 py-2.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                <option value="{{ note.is_public }}">
                                    {% if note.is_public == 1 %}
                                    Yes
                                    {% else %}
                                    No
                                    {% endif %}
                                </option>
                                <option value="{{ 1 }}">Yes</option>
                                <option value="{{ 0 }}">No</option>
                            </select>
                        </label>
                    </div>
                </div>
                <div class="sm:col-span-3">
                    <label for="teacher_id" class="block text-sm font-medium leading-6 text-gray-900">Teacher</label>
                    <div class="mt-2">
                        <label>
                            <select name="teacher_id"  class="block w-full pl-2 rounded-md border-0 py-2.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                <option value="{{ note.teacher_id }}">{{ note.display_name }}</option>
                                {% for teacher in teachers %}
                                    <option name="teacher_id" value="{{ teacher.teacher_id }}">{{ teacher.display_name }}</option>
                                {% endfor %}
                            </select>
                        </label>
                    </div>
                </div>
                <div class="sm:col-span-3">
                    <label for="category_id" class="block text-sm font-medium leading-6 text-gray-900">Category</label>
                    <div class="mt-2">
                        <label>
                            <select name="category_id" class="block w-full pl-2 rounded-md border-0 py-2.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                <option value="{{ note.category_id }}">{{ note.omschrijving }}</option>
                                {% for category in categories %}
                                <option value="{{ category.category_id }}">{{ category.omschrijving }}</option>
                                {% endfor %}
                            </select>
                        </label>
                    </div>
                </div>
                <div class="sm:col-span-3">
                    <label for="note" class="block text-sm font-medium leading-6 text-gray-900">Note</label>
                    <div class="mt-2">
                        <label>
                        <input name="note" value="{{ note.note }}" class="block w-full pl-2 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </label>
                    </div>
                </div>
                <label>
                <input type="hidden" name="note_id" value="{{ note.note_id }}" >
                </label>
            </div>
        </div>
        <div class="mt-6 flex items-center justify-end gap-x-6">
            <button type="submit" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Save</button>
        </div>
    </div>
</form>
    <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
    <form action="{{ url_for('notes.generate_question') }}" method="POST">
        <input type="hidden" name="note_id" value="{{ note.note_id }}">
        <input type="hidden" name="note" value="{{ note.note }}">
        <div class="mt-6 flex items-center justify-between">
            <button type="submit" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Generate open question</button>
        </div>
    </form>
    </div>
{% endfor %}
{% endblock %}