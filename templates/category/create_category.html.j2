{% extends "index.html.j2" %}
{% block content %}
<form action="{{ url_for('category.create_category') }}" method="POST">
    {# dit is de csrf token #}
    {{ form.hidden_tag() }}
    <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
        <div class="border-b border-gray-900/10 pb-12">
            <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                <div class="sm:col-span-3">
                    <label for="omschrijving" class="block font-medium leading-6 text-gray-900">Omschrijving</label>
                    <div class="mt-2">
                        <label>
                        <input id="omschrijving" name="omschrijving" placeholder="eg: Databases" class="block w-full pl-2 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </label>
                    </div>
                    {% if form.omschrijving.errors %}
                    {% for error in form.omschrijving.errors %}
                    <p class="text-red-500 mt-1">{{ error }}</p>
                    {% endfor %}
                    {% endif %}
                </div>
            </div>
        </div>
        <div class="mt-6 flex items-center justify-end gap-x-6">
           <a href="{{ url_for('category.categories') }}" class="href">
                <button type="button" class="border rounded-lg text-red-500 px-3 py-2 text-sm font-semibold shadow-sm hover:bg-gray-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600">Cancel</button>
            </a>
            <button type="submit" class="rounded-lg bg-green-500 text-white px-3 py-2 text-sm font-semibold shadow-sm hover:bg-green-600 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600">Save</button>
        </div>
    </div>
</form>
{% endblock %}