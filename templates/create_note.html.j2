{% extends "index.html.j2" %}
{% block content %}
<form action="{{ url_for('notes.create_note') }}" method="POST">
{{ form.hidden_tag() }}
    <div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
        <div class="border-b border-gray-900/10 pb-12">
            <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                <div class="sm:col-span-3">
                    <label for="title" class="block font-medium leading-6 text-gray-900">Title</label>
                    <div class="mt-2">
                        <label>
                        <input id="title" name="title" placeholder="Summary of python OOP" class="block w-full pl-2 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </label>
                    </div>
                    {% if form.title.errors %}
                    {% for error in form.title.errors %}
                        <p class="text-red-500 mt-1">{{ error }}</p>
                    {% endfor %}
                {% endif %}
                </div>
                <div class="sm:col-span-3">
                    <label for="note_source" class="block text-sm font-medium leading-6 text-gray-900">Note Source</label>
                    <div class="mt-2">
                        <label>
                        <input type="text" name="note_source" placeholder="eg: www.w3schools.com" class="block w-full pl-2 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </label>
                    </div>
                    {% if form.note_source.errors %}
                    {% for error in form.note_source.errors %}
                        <p class="text-red-500 mt-1">{{ error }}</p>
                    {% endfor %}
                {% endif %}
                </div>
                <div class="sm:col-span-3">
                    <label for="is_public" class="block text-sm font-medium leading-6 text-gray-900">Is Public</label>
                    <div class="mt-2">
                        <label>
                        <input name="is_public" placeholder="Yes" type="number" class="block w-full pl-2 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                        </label>
                    </div>
                    {% if form.is_public.errors %}
                    {% for error in form.is_public.errors %}
                        <p class="text-red-500 mt-1">{{ error }}</p>
                    {% endfor %}
                {% endif %}
                </div>
                <div class="sm:col-span-3">
                    <label for="teacher-id" class="block text-sm font-medium leading-6 text-gray-900">Teacher</label>
                    <div class="mt-2">
                        <label>
                            <select name="teacher_id"  class="block w-full pl-2 rounded-md border-0 py-2.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                {% for teacher in teachers %}
                                <option value="{{ teacher[0] }}">{{ teacher[1] }}</option>
                                {% endfor %}
                            </select>
                        </label>
                    </div>
                {% if form.teacher_id.errors %}
                    {% for error in form.teacher_id.errors %}
                        <p class="text-red-500 mt-1">{{ error }}</p>
                    {% endfor %}
                {% endif %}
                </div>
                <div class="sm:col-span-3">
                    <label for="category_id" class="block text-sm font-medium leading-6 text-gray-900">Category</label>
                    <div class="mt-2">
                        <label>
                            <select name="category_id" class="block w-full pl-2 rounded-md border-0 py-2.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
                                {% for category in categories %}
                                <option value="{{ category[0] }}">{{ category[1] }}</option>
                                {% endfor %}
                            </select>
                        </label>
                    </div>
                {% if form.category_id.errors %}
                    {% for error in form.category_id.errors %}
                        <p class="text-red-500 mt-1">{{ error }}</p>
                    {% endfor %}
                {% endif %}
                </div>
                <div class="sm:col-span-3">
                    <label for="note" class="block text-sm font-medium leading-6 text-gray-900">Note</label>
                    <div class="mt-2">
                        <label>
                        <textarea name="note" placeholder="Object-oriented programming (OOP) is a method of structuring a program by bundling related properties and behaviors into individual objects. In this tutorial, youâ€™ll learn the basics of object-oriented programming in Python." class="block w-full pl-2 rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"></textarea>
                        </label>
                    </div>
                    {% if form.note.errors %}
                    {% for error in form.note.errors %}
                        <p class="text-red-500 mt-1">{{ error }}</p>
                    {% endfor %}
                {% endif %}
                </div>
            </div>
        </div>
        <div class="mt-6 flex items-center justify-end gap-x-6">
            <button type="submit" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Save</button>
        </div>
    </div>
</form>
{% endblock %}